<BsForm @formLayout="vertical" @model="model-name" onSubmit="action" as |form|>
  <div class="col-md-6">
    <fieldset>
      <legend>{{t 'configuration'}}</legend>

      <form.element @controlType="text" @label={{t 'name'}} @placeholder={{t 'name'}} @property="name" as |el|>
        <el.control @id="Tooltip-name" />
        <BsTooltip @placement="right" @triggerElement="#Tooltip-name" @triggerEvents='hover'>
          {{t 'information.translation.key'}}
        </BsTooltip>
      </form.element>

      <form.element @label={{t 'gpio'}}>
        <div id="Tooltip-gpio">
          <DevicePicker @arrayOfDeviceClass="arrayOfDeviceClass"
                        @placeholder='GPIO'
                        @relationshipsName='gpio'
                        @device="ledBuzzer" />
          <BsTooltip @triggerElement="#Tooltip-gpio" @placement="right">
            {{t 'information.translation.key.gpio'}}
          </BsTooltip>
        </div>
      </form.element>

      <form.element @property="enabled" @label={{t 'enable'}}>
        <div class="pull-right" id="Tooltip-enable">
          <DeviceToggleEnabled device="piface-digital-gpio" saveIt="false" />
          <BsTooltip @placement="right" @triggerElement="#Tooltip-enable" @triggerEvent='hover'>
            {{t 'information.translation.key.enabled'}}
          </BsTooltip>
        </div>
      </form.element>

      <div class="row">
        <div class="col-md-6">
          <BsButton @defaultText={{t 'submit'}} @type="success" @size="md" @buttonType="submit" />
        </div>
        {{#id this.delete}}
          <div class="pull-right form-button-delete">
            <ButtonWithConfirmation @type='danger'
                                    @icon='glyphicon glyphicon-remove'
                                    @size='md'
                                    @text={{t 'delete'}}
                                    @message={{t 'piface-digital-gpios.delete_confirm'}}
                                    @onConfirm={{this.delete}} />
          </div>
        {{/id}}
      </div>
    </fieldset>
  </div>
</BsForm>


