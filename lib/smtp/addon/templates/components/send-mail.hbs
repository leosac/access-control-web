{{#bs-form model=this as |form|}}
  {{form.element controlType="email" label="Recipient"
                 placeholder="me@me.com"
                 property='recipient'}}

  {{form.element controlType="text" label=(t 'smtp.subject')
                 property='subject'}}

  {{form.element controlType='textarea' label=(t 'smtp.body')
                 property='body'}}

  {{bs-button defaultText=(t 'smtp.send') type="primary"
              buttonType="submit" onClick=(action 'sendTestMail')}}
{{/bs-form}}