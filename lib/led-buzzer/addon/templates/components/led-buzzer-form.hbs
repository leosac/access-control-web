{{#form.element controlType="text" label=(t 'name')
                placeholder=(t 'name')
                property="name" as |el|}}
  {{el.control}}
{{/form.element}}

{{#form.element property="defaultBlinkDuration" label=(t 'blink_duration') controlType='number' as |el|}}
  {{el.control id="Tooltip-duration"}}
  {{#bs-tooltip triggerElement="#Tooltip-duration" placement="right"}}{{t 'information.duration'}}{{/bs-tooltip}}
{{/form.element}}

{{#form.element property="defaultBlinkSpeed" label=(t 'blink_speed') controlType='number'  as |el|}}
  {{el.control id="Tooltip-speed"}}
  {{#bs-tooltip triggerElement="#Tooltip-speed" placement="right"}}{{t 'information.speed'}}{{/bs-tooltip}}
{{/form.element}}

{{#form.element label=(t 'gpio')}}
  <div id="Tooltip-gpio">
  {{device-picker arrayOfDeviceClass=arrayOfDeviceClass
                  placeholder='GPIO'
                  relationshipsName='gpio'
                  device=ledBuzzer}}
  {{#bs-tooltip triggerElement="#Tooltip-gpio" placement="right"}}{{t 'information.gpio'}}{{/bs-tooltip}}
  </div>
{{/form.element}}

{{#form.element label=(t 'enable')}}
  <div class="pull-right" id="Tooltip-enable">
    {{device-toggle-enabled device=ledBuzzer saveIt=false}}
    {{#bs-tooltip triggerElement="#Tooltip-enable" placement="right"}}{{t 'information.enable'}}{{/bs-tooltip}}
  </div>
{{/form.element}}