<LinkTo @route="buzzer-create" class="btn btn-primary">
  {{t 'buzzers.create'}}
</LinkTo>
&nbsp;
<LinkTo @route="led-create" class="btn btn-primary">
  {{t 'leds.create'}}
</LinkTo>
<hr>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
    <th>#Id</th>
    <th class="col-md-2">{{t 'name'}}</th>
    <th>{{t 'type'}}</th>
    <th>{{t 'blink_duration'}}</th>
    <th>{{t 'blink_speed'}}</th>
    <th>{{t 'enable'}}</th>
    <th class="col-md-offset-10 col-md-2">{{t 'delete'}}</th>
    </thead>
    <tbody>
    {{#each this.model as |ledBuzzer|}}
      {{#if ledBuzzer.id}}
        {{#if (eq ledBuzzer.deviceClass 'buzzer')}}
          <tr>
            <td>
              <LinkTo @route="buzzer" @model={{ledBuzzer.id}}>
                {{ledBuzzer.id}}
              </LinkTo>
            </td>
            <td>
              <LinkTo @route="buzzer" @model={{ledBuzzer.id}}>
                {{ledBuzzer.name}}
              </LinkTo>
            </td>
            <td>
              <LinkTo @route="buzzer" @model={{ledBuzzer.id}}>
                {{t 'buzzer'}}
              </LinkTo>
            </td>
            <td>
              <LinkTo @route="buzzer" @model={{ledBuzzer.id}}>
                {{ledBuzzer.defaultBlinkDuration}}
              </LinkTo>
            </td>
            <td>
              <LinkTo @route="buzzer" @model={{ledBuzzer.id}}>
                {{ledBuzzer.defaultBlinkSpeed}}
              </LinkTo>
            </td>
            <td>
              <div class="pull-left">
                <DeviceToggleEnabled @device={{ledBuzzer}} @saveIt={{true}} />
              </div>
            </td>
            <td>
              <ButtonWithConfirmation @type="danger" @icon="glyphicon glyphicon-remove" @size="xs" @text={{t "delete"}} @message={{t "led-buzzer.delete_confirm"}} @onConfirm={{fn this.deleteLedBuzzer ledBuzzer}} />
            </td>
          </tr>
        {{else}}
          <tr>
            <td>
              <LinkTo @route="led" @model={{ledBuzzer.id}}>
                {{ledBuzzer.id}}
              </LinkTo>
            </td>
            <td>
              <LinkTo @route="led" @model={{ledBuzzer.id}}>
                {{ledBuzzer.name}}
              </LinkTo>
            </td>
            <td>
              <LinkTo @route="led" @model={{ledBuzzer.id}}>
                {{t 'led'}}
              </LinkTo>
            </td>
            <td>
              <LinkTo @route="led" @model={{ledBuzzer.id}}>
                {{ledBuzzer.defaultBlinkDuration}}
              </LinkTo>
            </td>
            <td>
              <LinkTo @route="led" @model={{ledBuzzer.id}}>
                {{ledBuzzer.defaultBlinkSpeed}}
              </LinkTo>
            </td>
            <td>
              <div class="pull-left">
                <DeviceToggleEnabled @device={{ledBuzzer}} @saveIt={{true}} />
              </div>
            </td>
            <td>
              <ButtonWithConfirmation @type="danger" @icon="glyphicon glyphicon-remove" @size="xs" @text={{t "delete"}} @message={{t "led-buzzer.delete_confirm"}} @onConfirm={{fn this.deleteLedBuzzer ledBuzzer}} />
            </td>
          </tr>
        {{/if}}
      {{/if}}
    {{/each}}
    </tbody>
  </table>
</div>