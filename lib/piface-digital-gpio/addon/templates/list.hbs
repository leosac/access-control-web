{{#link-to 'create' class='btn btn-primary'}}
  {{t 'piface-digital-gpio.create_config'}}
{{/link-to}}
<hr>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
    <th>#Id</th>
    <th>{{t 'name'}}</th>
    <th>{{t 'number'}}</th>
    <th>{{t 'direction'}}</th>
    <th>{{t 'value'}}</th>
    <th>Test</th>
    <th>{{t 'enable'}}</th>
    <th>{{t 'delete'}}</th>
    </thead>
    <tbody>
    {{#each model as |piface-digital-gpio|}}
      <tr>
        {{#link-to 'piface-digital-gpio' piface-digital-gpio.id tagName='td'}}
          {{piface-digital-gpio.id}}
        {{/link-to}}
        {{#link-to 'piface-digital-gpio' piface-digital-gpio.id tagName='td'}}
          {{piface-digital-gpio.name}}
        {{/link-to}}
        {{#link-to 'piface-digital-gpio' piface-digital-gpio.id tagName='td'}}
          {{piface-digital-gpio.number}}
        {{/link-to}}
        {{#link-to 'piface-digital-gpio' piface-digital-gpio.id tagName='td'}}
          {{t piface-digital-gpio.direction}}
        {{/link-to}}
        {{#link-to 'piface-digital-gpio' piface-digital-gpio.id tagName='td'}}
          {{#if (eq piface-digital-gpio.defaultValue 'true')}}
            {{t 'true'}}
          {{else}}
            {{t 'false'}}
          {{/if}}
        {{/link-to}}
        {{#link-to 'piface-digital-gpio' piface-digital-gpio.id tagName='td'}}
          {{#if (eq piface-digital-gpio.direction 'out')}}
            {{piface-digital-gpio-test gpioId=piface-digital-gpio.id}}
          {{/if}}
        {{/link-to}}
        <td>
          <div class="pull-left">
            {{x-toggle theme='material' size='medium'
                       value=piface-digital-gpio.enabled
                       onToggle=(route-action 'enablePiface' piface-digital-gpio)}}
          </div>
        </td>
        <td>
          {{button-with-confirmation
            type='danger'
            icon='glyphicon glyphicon-remove'
            size='sm'
            text=(t 'delete')
            message=(t 'piface-digital-gpio.delete_confirm')
            onConfirm=(route-action 'deletePifaceDigitalGpio' piface-digital-gpio)}}
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>
