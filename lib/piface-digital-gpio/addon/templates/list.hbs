{{#link-to 'create' class='btn btn-primary'}}
  {{t 'piface-digital-gpio.create_config'}}
{{/link-to}}

{{log model}}
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
    <th>#Id</th>
    <th>{{t 'name'}}</th>
    <th>{{t 'number'}}</th>
    <th>{{t 'direction'}}</th>
    <th>{{t 'value'}}</th>
    <th>{{t 'delete'}}</th>
    </thead>
    <tbody>
    {{#each model as |config|}}
      {{#link-to 'piface-digital-gpio' config.id tagName = "tr"}}
        <td>{{config.id}}</td>
        <td>{{config.name}}</td>
        <td>{{t config.direction}}</td>
        <td>{{config.value}}</td>
        <td>
          {{button-with-confirmation
            type='danger'
            icon='glyphicon glyphicon-remove'
            size='xs'
            text=(t 'delete')
            message=(t 'piface-digital-gpio.delete_confirm')
            onConfirm=(route-action 'deletePifaceDigitalGpio' config)}}
        </td>
      {{/link-to}}
    {{/each}}
    </tbody>
  </table>
</div>
