{{#link-to 'create' class='btn btn-primary'}}
  {{t 'piface-digital-gpio.create_config'}}
{{/link-to}}
<hr>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
    <th>#Id</th>
    <th>{{t 'name'}}</th>
    <th>{{t 'number'}}</th>
    <th>{{t 'direction'}}</th>
    <th>{{t 'value'}}</th>
    <th>{{t 'delete'}}</th>
    </thead>
    <tbody>
    {{#each model as |piface-digital-gpio|}}
      {{#link-to 'piface-digital-gpio' piface-digital-gpio.id tagName = "tr"}}
        <td>{{piface-digital-gpio.id}}</td>
        <td>{{piface-digital-gpio.name}}</td>
        <td>{{piface-digital-gpio.number}}</td>
        <td>{{t piface-digital-gpio.direction}}</td>
        <td>
          {{#if piface-digital-gpio.defaultValue}}
            {{t 'true'}}
          {{else}}
            {{t 'false'}}
          {{/if}}
        </td>
        <td>
          {{button-with-confirmation
            type='danger'
            icon='glyphicon glyphicon-remove'
            size='xs'
            text=(t 'delete')
            message=(t 'piface-digital-gpio.delete_confirm')
            onConfirm=(route-action 'deletePifaceDigitalGpio' piface-digital-gpio)}}
        </td>
      {{/link-to}}
    {{/each}}
    </tbody>
  </table>
</div>
