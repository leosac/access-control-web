<BsButton @type={{this.type}} @icon={{this.icon}} @size={{this.size}} @onClick={{action "spawnModal"}} as |button|>
  {{this.text}}
</BsButton>

<BsModal @body={{false}} @footer={{false}} @open={{this.modalOpen}} @title={{t "confirmation"}} as |modal|>
  <modal.body>
    {{this.message}} <br>
  </modal.body>

  <modal.footer as |footer|>
    <BsButton @type="primary" @onClick={{action "onCancel"}}>
      {{t 'cancel'}}
    </BsButton>

    <BsButton @type="danger" @onClick={{action "onConfirm"}}>
      {{t 'confirm'}}
    </BsButton>
  </modal.footer>
</BsModal>
