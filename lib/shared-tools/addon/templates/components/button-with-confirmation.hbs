{{#bs-button type=this.type icon=this.icon
             size=this.size
             onClick=(action 'spawnModal') as | button |}}
  {{this.text}}
{{/bs-button}}

{{#bs-modal body=false footer=false open=this.modalOpen title=(t 'confirmation') as | modal |}}
  {{#modal.body}}
    {{this.message}} <br>
  {{/modal.body}}

  {{#modal.footer as | footer |}}
    {{#bs-button type='primary' onClick=(action 'onCancel')}}
      {{t 'cancel'}}
    {{/bs-button}}

    {{#bs-button type='danger' onClick=(action 'onConfirm')}}
      {{t 'confirm'}}
    {{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}
