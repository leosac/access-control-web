{{#bs-button type=type icon=icon
             size=size
             onClick=(action 'spawnModal') as | button |}}
  {{text}}
{{/bs-button}}

{{#bs-modal body=false footer=false open=modalOpen title=(t 'confirmation') as | modal |}}
  {{#modal.body}}
    {{message}} <br>
  {{/modal.body}}

  {{#modal.footer as | footer |}}
    {{#bs-button type='primary' onClick=(action 'onCancel')}}
      {{t 'cancel'}}
    {{/bs-button}}

    {{#bs-button type='danger' onClick=(action 'onConfirm')}}
      {{t 'confirm'}}
    {{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}
