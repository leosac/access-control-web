<PowerSelect @searchEnabled={{true}} @search={{this.args.searchDevice}} @selected={{this.newDevice.name}} @placeholder={{this.args.placeholder}} @allowClear={{true}} @onChange={{fn (mut this.newDevice)}} as |device|>
  {{device.name}}
  <span style="color: #9b9aa5;font-style: italic;margin-right:20px;" class="pull-right">
    {{device.type}}
  </span>
</PowerSelect>