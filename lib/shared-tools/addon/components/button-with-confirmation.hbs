<BsButton @type={{this.type}} @icon={{this.icon}} @size={{this.size}} @onClick={{this.spawnModal}}>
  {{this.text}}
</BsButton>

<BsModal @body={{false}} @footer={{false}} @open={{this.modalOpen}} @title={{t "confirmation"}} as |modal|>
  <modal.body>
    {{this.message}} <br>
  </modal.body>

  <modal.footer>
    <BsButton @type="primary" @onClick={{this.onCancel}}>
      {{t 'cancel'}}
    </BsButton>

    <BsButton @type="danger" @onClick={{this.onConfirm}}>
      {{t 'confirm'}}
    </BsButton>
  </modal.footer>
</BsModal>
