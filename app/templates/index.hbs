<div>
  {{t 'index.welcome' username=model.username}}
</div>
<div style="padding-top: 2%; text-align: center;" class="row ">
    <div class="col-lg-3"></div>
    <div class="col-lg-2">
        {{#link-to 'credentials.list'}}
            <img style="height: 128px; width: 128px;" src="/assets/images/dashboard-access.svg" alt="{{t 'access'}}" />
        {{/link-to}}
        <br /><br />
        <p>
            {{#link-to 'credentials.list' class='btn btn-primary'}}
                {{t 'index.manage_access'}}
            {{/link-to}}
        </p>
    </div>
    <div class="col-lg-2">
        {{#link-to 'index'}}
            <img style="height: 128px; width: 128px;" src="/assets/images/dashboard-updates.svg" alt="{{t 'access'}}" />
        {{/link-to}}
        <br /><br />
        <p>
            {{#link-to 'updates' class='btn btn-primary'}}
                {{t 'index.apply_update'}}
            {{/link-to}}
        </p>
    </div>
    <div class="col-lg-2">
        {{#link-to 'auditlog'}}
            <img style="height: 128px; width: 128px;" src="/assets/images/dashboard-events.svg" alt="{{t 'access'}}" />
        {{/link-to}}
        <br /><br />
        <p>
            {{#link-to 'auditlog' class='btn btn-primary'}}
                {{t 'index.event'}}
            {{/link-to}}
        </p>
    </div>
    <div class="col-lg-3"></div>
</div>

<div style="padding-top: 1%; margin-bottom: 1%; float: right;">
  <a href="http://www.leosac.com/" target="_blank" title="Leosac"><img style="width: 400px;height: 106px" src="assets/images/project-logo.png" alt="leosac Logo" /></a>
</div>