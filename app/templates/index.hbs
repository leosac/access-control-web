<div>
  {{t 'index.welcome' username=model.username}}
</div>
<div class="row center-image">
    <div class="col-lg-3"></div>
    <div class="col-lg-2">
        {{#link-to 'credentials.list'}}
          {{inline-svg "/assets/images/dashboard-access.svg" class="summary-icon"}}
        {{/link-to}}
        <br /><br />
        <p>
            {{#link-to 'credentials.list' class='btn btn-primary'}}
                {{t 'index.manage_access'}}
            {{/link-to}}
        </p>
    </div>
    <div class="col-lg-2">
        {{#link-to 'updates'}}
          {{inline-svg "/assets/images/dashboard-updates.svg" class="summary-icon"}}
        {{/link-to}}
        <br /><br />
        <p>
            {{#link-to 'updates' class='btn btn-primary'}}
                {{t 'index.apply_update'}}
            {{/link-to}}
        </p>
    </div>
    <div class="col-lg-2">
        {{#link-to 'auditlog'}}
          {{inline-svg "/assets/images/dashboard-events.svg" class="summary-icon"}}
        {{/link-to}}
        <br /><br />
        <p>
            {{#link-to 'auditlog' class='btn btn-primary'}}
                {{t 'index.event'}}
            {{/link-to}}
        </p>
    </div>
