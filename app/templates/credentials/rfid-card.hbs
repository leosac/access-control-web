<div>
    <h2>Alias: {{model.alias}}</h2>
</div>

<div>
    {{#bs-tab as |tab|}}
        {{#tab.pane title=(t 'parameters')}}
            <div >
                {{button-with-confirmation
                        type='danger'
                        icon='glyphicon glyphicon-remove'
                        size='sm'
                        text=(t 'delete')
                        message=(t 'credentials.delete_confirm')
                        onConfirm=(route-action 'deleteCredential')
                }}
            </div>

            <div>
                {{rfid-card-form card=model action=(route-action 'updateCard')}}
            </div>
        {{/tab.pane}}

        {{#tab.pane title=(t 'access')}}
            {{credential-schedules credential=model}}
        {{/tab.pane}}
    {{/bs-tab}}
</div>
