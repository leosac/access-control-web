<div>
  <h2>Alias: {{this.model.alias}}</h2>
</div>

<div>
  <BsTab as |tab|>
    <tab.pane @title={{t "parameters"}}>
        <PinCodeForm @pin={{this.model}} @action={{this.updatePin}} @delete={{this.deleteCredential}} />
    </tab.pane>

    <tab.pane @title={{t "access"}}>
      <CredentialSchedules @credential={{this.model}} />
    </tab.pane>
  </BsTab>
</div>