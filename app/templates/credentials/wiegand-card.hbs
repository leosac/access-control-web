<div>
    <h2>Alias: {{model.alias}}</h2>
</div>

<div>
  {{#bs-tab}}
    {{#bs-tab-pane title='Parameters'}}

        <div >
          {{button-with-confirmation
            type='danger'
            icon='glyphicon glyphicon-remove'
            size='sm'
            text='Delete'
            message='Are you sure you wish to delete this credential ?'
            onConfirm=(route-action 'deleteCredential')
          }}
        </div>

        <div class="col-md-6">
          {{wiegand-card-form card=model action=(route-action 'updateCard')}}
        </div>

        <div class="col-md-6">
            {{validity-control enabled=(mut model.validityEnabled)
                               startDate=(mut model.validityStart)
                               endDate=(mut model.validityEnd)}}
        </div>

    {{/bs-tab-pane}}

    {{#bs-tab-pane title='Access'}}
        {{credential-schedules credential=model}}
    {{/bs-tab-pane}}
  {{/bs-tab}}
</div>
