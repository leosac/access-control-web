{{#link-to 'schedules.create' class='btn btn-primary'}}
    {{t 'schedule.create_schedule'}}
{{/link-to}}
<hr>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <th>#Id</th>
        <th>{{t 'name'}}</th>
        <th>{{t 'description'}}</th>
        <th>{{t 'delete'}}</th>
        </thead>
        <tbody>
        {{#each model as |sched|}}
            <tr>
                <td>{{#link-to 'schedule' sched.id}}
                    {{sched.id}}
                {{/link-to}}</td>
                <td>{{sched.name}}</td>
                <td>{{sched.description}}</td>
                <td>
                    {{button-with-confirmation
                            type='danger'
                            icon='glyphicon glyphicon-remove'
                            size='xs'
                            text=(t 'delete')
                            message=(t 'schedule.delete_confirm')
                            onConfirm=(route-action 'deleteSchedule' sched.id)
                    }}
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
