{{#link-to 'schedules.create' class='btn btn-primary'}}
    {{t 'schedule.create_schedule'}}
{{/link-to}}
<hr>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
        <th>#Id</th>
        <th class="col-md-2">{{t 'name'}}</th>
        <th>{{t 'description'}}</th>
        <th class="col-md-offset-10 col-md-2">{{t 'delete'}}</th>
        </thead>
        <tbody>
        {{#each model as |sched|}}
            {{#link-to 'schedule' sched.id tagName="tr"}}
                <td>
                    {{sched.id}}
                </td>
                <td>{{sched.name}}</td>
                <td>{{sched.description}}</td>
                <td>
                    {{button-with-confirmation
                            type='danger'
                            icon='glyphicon glyphicon-remove'
                            size='xs'
                            text=(t 'delete')
                            message=(t 'schedule.delete_confirm')
                            onConfirm=(route-action 'deleteSchedule' sched.id)}}
                </td>
            {{/link-to}}
        {{/each}}
        </tbody>
    </table>
</div>
