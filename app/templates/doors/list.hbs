{{#link-to 'doors.create' class='btn btn-primary'}}
    {{t 'door.create_door'}}
{{/link-to}}
<hr>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <th>#Id</th>
        <th class="col-md-2">{{t 'alias'}}</th>
        <th>{{t 'description'}}</th>
        <th class="col-md-offset-10 col-md-2">{{t 'delete'}}</th>
        </thead>
        <tbody>
        {{#each model as |door|}}
            {{#link-to 'door' door.id tagName = "tr"}}
                <td>{{door.id}}</td>
                <td>{{door.alias}}</td>
                <td>{{door.description}}</td>
                <td>
                    {{button-with-confirmation
                            type='danger'
                            icon='glyphicon glyphicon-remove'
                            size='xs'
                            text=(t 'delete')
                            message=(t 'door.delete_confirm')
                            onConfirm=(route-action 'deleteDoor' door)}}
                </td>
            {{/link-to}}
        {{/each}}
        </tbody>
    </table>
</div>
