<LinkTo @route='doors.create'>
    <span class='btn btn-primary'>{{t 'door.create_door'}}</span>
</LinkTo>
<hr>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <th>#Id</th>
        <th class="col-md-2">{{t 'alias'}}</th>
        <th>{{t 'description'}}</th>
        <th class="col-md-offset-10 col-md-2">{{t 'delete'}}</th>
        </thead>
        <tbody>
        {{#each this.model as |door|}}
            <tr>
            <td><LinkTo @route='door' @model={{door.id}}>{{door.id}}</LinkTo></td>
            <td><LinkTo @route='door' @model={{door.id}}>{{door.alias}}</LinkTo></td>
            <td>{{door.description}}</td>
            <td>
                {{button-with-confirmation
                        type='danger'
                        icon='glyphicon glyphicon-remove'
                        size='xs'
                        text=(t 'delete')
                        message=(t 'door.delete_confirm')
                        onConfirm=(route-action 'deleteDoor' door)}}
            </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
