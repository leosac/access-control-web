<div>
  <h2>Alias: {{this.model.name}}</h2>
</div>
<div>
  <BsTab as |tab|>
    <tab.pane @title={{t "timeframes"}}>
      <ScheduleForm @schedule={{this.model}} @delete={{route-action "deleteSchedule"}} @action={{route-action "editSchedule"}} />
    </tab.pane>

    <tab.pane @title={{t "mapping"}}>
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-12 space-bottom space-top">
            {{t 'schedule.mapping_list'}}<br>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="pull-left">
              <BsButton @type='primary' @defaultText={{t 'schedule.add_mapping'}} @onClick={{route-action 'addMapping'}} />
            </div>
            <div class="pull-right">
              <BsButton @defaultText={{t 'save'}} @type="success" @onClick={{route-action 'editSchedule'}} />
            </div>
          </div>
        </div>

        <hr>


        <BsAccordion as |acc|>
          {{#each this.model.mapping as |mapping|}}
            <acc.item @title={{t 'schedule.mapping' alias=mapping.alias}}>
              <ScheduleMapping @mapping={{mapping}} />
            </acc.item>
            <hr>
          {{/each}}
        </BsAccordion>

      </div>
    </tab.pane>
  </BsTab>
</div>