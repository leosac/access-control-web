{{#bs-tab}}
  {{#bs-tab-pane title=(t 'timeframes')}}
      <div class="col-md-6">
        {{schedule-form schedule=model action=(route-action 'editSchedule')}}
      </div>
  {{/bs-tab-pane}}

  {{#bs-tab-pane title=(t 'mapping')}}

      {{t 'schedule.mapping_list'}}<br> <br>


      <div class="row">
          <div class="col-md-12">
              <div class="pull-right">
                {{bs-button defaultText=(t 'save') type="success" buttonType="submit"
                            action=(route-action 'editSchedule')}}
              </div>
              <div class="pull-left">
                {{bs-button icon='glyphicon glyphicon-add' type='success'
                            defaultText=(t 'schedule.add_mapping') action=(route-action 'addMapping')}}
              </div>
          </div>

          <div class="col-md-12">
              <hr>
          </div>
      </div>

      {{#bs-accordion}}
        {{#each model.mapping as |mapping|}}
          {{#bs-accordion-item title=(t 'schedule.mapping' alias=mapping.alias)}}
            {{schedule-mapping mapping=mapping}}
          {{/bs-accordion-item}}

          <hr>

        {{/each}}
      {{/bs-accordion}}
  {{/bs-tab-pane}}
{{/bs-tab}}
