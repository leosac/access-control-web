<div class="col-lg-12 col-md-12">
    <div class="row">
        <div class="col-md-12" style="margin-bottom: 10px">
            {{t 'overview.intro' appname=(getenv 'appname')}}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="#" {{action 'refreshOverview'}}>
                        <i style="color: green" class="fa fa-refresh"></i> {{t 'refresh'}}
                    </a>
                </div>

                <div class="panel-body">
                    {{system-overview}}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4" style="padding-top: 25px">
            <label class="control-label">{{t 'page_size'}} :</label>
            {{input type="number"
                           value=logPerPage }}
        </div>

        <div class="col-md-4" style="padding-bottom: 0px">
            {{numbered-paginator first=0
                                 last=lastLogPage
                                 current=currentLogPage
                                 onPageChange=(action "updateLogPageNumber")
            }}
        </div>

        <div class=" col-md-4 pull-right" style="padding-top: 25px">
            {{t 'overview.total_logs' totalLogs=totalLogs}}
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            {{t 'overview.last_logs'}}
        </div>

        <div class="panel-body">
            {{logs-view logs=lastLogs}}
        </div>
    </div>
</div>
