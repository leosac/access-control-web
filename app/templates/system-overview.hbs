<div class="col-lg-12 col-md-12">
    <div class="row">
        <div class="col-md-12" style="margin-bottom: 1%">
            {{t 'overview.intro' appname=(getenv 'appname')}}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="#" {{action 'refreshOverview'}}>
                        <i style="color: green" class="fa fa-refresh"></i> {{t 'refresh'}}
                    </a>
                </div>

                <div class="panel-body">
                    {{system-overview}}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 tex-center" style="padding-top: 1%">
            {{#bs-form as |from|}}
                {{#form.element label=(t 'page_size') property="logPerPage" as |el|}}
                    <input class="form-control"
                           placeholder="20"
                           type="number"
                           value={{el.value}}
                                   oninput={{action (mut el.value)
                                                    value="target.value"}}
                           onchange={{action (mut el.value)
                                             value="target.value"}}
                                   id={{el.id}}>
                {{/form.element}}
            {{/bs-form}}
        </div>

        <div class="col-md-5 text-center">
            {{numbered-paginator first=0
                                 last=lastLogPage
                                 current=currentLogPage
                                 onPageChange=(action "updateLogPageNumber")
            }}
        </div>

        <div class=" col-md-4 text-center" style="padding-top: 2%">
            {{t 'overview.total_logs' totalLogs=totalLogs}}
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            {{t 'overview.last_logs'}}
        </div>

        <div class="panel-body">
            {{logs-view logs=lastLogs}}
        </div>
    </div>
</div>
