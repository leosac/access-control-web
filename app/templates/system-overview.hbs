<div class="col-lg-12 col-md-12">
    <div class="row">
        <div class="col-md-12" style="margin-bottom: 1%">
            {{t 'overview.intro' appname=(getenv 'appname')}}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{t 'general_information'}}

                </div>

                <div class="panel-body">
                    {{system-overview}}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3" style="padding-top: 1%">
          {{#bs-form as |form|}}
            {{form.element controlType='number' property=logPerPage label=(t 'page_size') onChange=(action (mut logPerPage))}}
          {{/bs-form}}
      </div>

      <div class="col-md-5 text-center">
        {{numbered-paginator first=0
                             last=lastLogPage
                             current=currentLogPage
                             onPageChange=(action "updateLogPageNumber")
        }}
      </div>

      <div class=" col-md-4 text-center" style="padding-top: 2%">
        {{t 'overview.total_logs' totalLogs=totalLogs}}
      </div>
    </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      {{t 'overview.last_logs'}}
    </div>

    <div class="panel-body">
      {{logs-view logs=lastLogs}}
        </div>
    </div>
</div>
