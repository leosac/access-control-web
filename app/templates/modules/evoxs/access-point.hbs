<div>
    <div class="col-md-6">
      {{#access-point-form ap=model action=(route-action 'editAP')}}
        {{bs-form-element controlType='number' label='Lock Id'
                          placeholder='42'
                          property='lockId'}}
      {{/access-point-form}}
    </div>
</div>

{{#if model.door}}
    This access point belongs to door <strong>{{#link-to 'door' model.door.id}}{{model.door.alias}}{{/link-to}}</strong>.
{{else}}
    This access point is not yet tied to a door.
{{/if}}
