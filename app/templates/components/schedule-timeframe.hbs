{{#if timeframe}}
  <div class="row">
    <div class="col-md-3">
      {{form.element controlType='checkbox' label=(t 'schedule.monday')
                     value=(mut this.timeframe.enabledOnMonday)
                     onChange=(action (mut this.timeframe.enabledOnMonday))}}
    </div>

    <div class="col-md-3">
      {{form.element controlType='checkbox' label=(t 'schedule.tuesday')
                     value=(mut this.timeframe.enabledOnTuesday)
                     onChange=(action (mut this.timeframe.enabledOnTuesday))}}
    </div>

    <div class="col-md-3">
      {{form.element controlType='checkbox' label=(t 'schedule.wednesday')
                     value=(mut this.timeframe.enabledOnWednesday)
                     onChange=(action (mut this.timeframe.enabledOnWednesday))}}
    </div>
    <div class="col-md-3">
      {{form.element controlType='checkbox' label=(t 'schedule.thursday')
                     value=(mut this.timeframe.enabledOnThursday)
                     onChange=(action (mut this.timeframe.enabledOnThursday))}}
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      {{form.element controlType='checkbox' label=(t 'schedule.friday')
                     value=(mut this.timeframe.enabledOnFriday)
                     onChange=(action (mut this.timeframe.enabledOnFriday))}}
    </div>
    <div class="col-md-3">
      {{form.element controlType='checkbox' label=(t 'schedule.saturday')
                     value=(mut this.timeframe.enabledOnSaturday)
                     onChange=(action (mut this.timeframe.enabledOnSaturday))}}
    </div>

    <div class="col-md-3">
      {{form.element controlType='checkbox' label=(t 'schedule.sunday')
                     value=(mut this.timeframe.enabledOnSunday)
                     onChange=(action (mut this.timeframe.enabledOnSunday))}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 cursor-link">
      <a {{action 'toggleAll'}}>{{t 'toggle_all'}}</a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 datetime-picker-margin">
      {{#form.element label=(t 'schedule.start_time')}}
        {{bs-datetimepicker disabled=this.disabled
                            date=this.timeframe.startTime format='H:mm'
                            updateDate=(action (mut this.timeframe.startTime))}}
      {{/form.element}}

    </div>

    <div class="col-md-5 datetime-picker-margin">
      {{#form.element label=(t 'schedule.end_time')}}
        {{bs-datetimepicker disabled=this.disabled
                            date=this.timeframe.endTime format='H:mm'
                            updateDate=(action (mut this.timeframe.endTime))}}
      {{/form.element}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 space-bottom">
      {{bs-button defaultText=(t 'remove_timeframe')
                  size='sm'
                  type='danger'
                  onClick=this.delete}}
    </div>
  </div>
{{/if}}