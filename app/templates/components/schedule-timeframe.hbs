{{#if timeframe}}
    <div class="col-md-6">
      {{bs-form-element controlType='checkbox' label=(t 'schedule.monday')
                        value=timeframe.enabledOnMonday}}
      {{bs-form-element controlType='checkbox' label=(t 'schedule.tuesday')
                        value=timeframe.enabledOnTuesday}}
      {{bs-form-element controlType='checkbox' label=(t 'schedule.wednesday')
                        value=timeframe.enabledOnWednesday}}
      {{bs-form-element controlType='checkbox' label=(t 'schedule.thursday')
                        value=timeframe.enabledOnThursday}}
      {{bs-form-element controlType='checkbox' label=(t 'schedule.friday')
                        value=timeframe.enabledOnFriday}}
      {{bs-form-element controlType='checkbox' label=(t 'schedule.saturday')
                        value=timeframe.enabledOnSaturday}}
      {{bs-form-element controlType='checkbox' label=(t 'schedule.sunday')
                        value=timeframe.enabledOnSunday}}
    </div>

    <div class="col-md-6">
      {{#bs-form-element label=(t 'schedule.start_time')}}
        {{input type='text' placeholder='13:37' value=(mut timeframe.startTime) class='form-control'}}
      {{/bs-form-element}}

      {{#bs-form-element label=(t 'schedule.end_time')}}
        {{input type='text' placeholder='18:42' value=(mut timeframe.endTime) class='form-control'}}
      {{/bs-form-element}}
    </div>
{{/if}}
