{{#if timeframe}}
    <div class="row">
        <div class="col-md-2">
            {{form.element controlType='checkbox' label=(t 'schedule.monday')
                           value=(mut timeframe.enabledOnMonday)
                           onChange=(action (mut timeframe.enabledOnMonday))}}
        </div>
        <div class="col-md-2">
            {{form.element controlType='checkbox' label=(t 'schedule.tuesday')
                           value=(mut timeframe.enabledOnTuesday)
                           onChange=(action (mut timeframe.enabledOnTuesday))}}

        </div>
        <div class="col-md-2">
            {{form.element controlType='checkbox' label=(t 'schedule.wednesday')
                           value=(mut timeframe.enabledOnWednesday)
                           onChange=(action (mut timeframe.enabledOnWednesday))}}
        </div>
        <div class="col-md-2">
            {{form.element controlType='checkbox' label=(t 'schedule.thursday')
                           value=(mut timeframe.enabledOnThursday)
                           onChange=(action (mut timeframe.enabledOnThursday))}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            {{form.element controlType='checkbox' label=(t 'schedule.friday')
                           value=(mut timeframe.enabledOnFriday)
                           onChange=(action (mut timeframe.enabledOnFriday))}}
        </div>
        <div class="col-md-2">
            {{form.element controlType='checkbox' label=(t 'schedule.saturday')
                           value=(mut timeframe.enabledOnSaturday)
                           onChange=(action (mut timeframe.enabledOnSaturday))}}
        </div>
        <div class="col-md-2">
            {{form.element controlType='checkbox' label=(t 'schedule.sunday')
                           value=(mut timeframe.enabledOnSunday)
                           onChange=(action (mut timeframe.enabledOnSunday))}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{#form.element label=(t 'schedule.start_time')}}
                {{input type='text' placeholder='13:37' value=(mut timeframe.startTime)
                        class='form-control'}}
            {{/form.element}}

        </div>
        <div class="col-md-4">
            {{#form.element label=(t 'schedule.end_time')}}
                {{input type='text' placeholder='18:42' value=(mut timeframe.endTime)
                        class='form-control'}}
            {{/form.element}}
        </div>
        <div class="col-md-4">
            {{bs-button defaultText=(t 'remove_timeframe') type='danger'
                        onClick=action}}
        </div>
    </div>
{{/if}}