{{!
Due to EmberJS bug #10780, we have to hack to prevent component
to render if there is no active session.
}}
{{#if authSrv._isLoggedIn}}
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {{#link-to "index" class="navbar-brand"}}Leosac Web Admin{{/link-to}}
            </div>
            <!-- /.navbar-header -->
            {{top-menu}}
            <!-- /.navbar-top-links -->
            {{side-menu}}
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">{{globalInfo.current_view_title}}</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                {{outlet}}
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
    </div>
{{else}}
    {{outlet}}
{{/if}}
