{{!
Due to EmberJS bug #10780, we have to hack to prevent component
to render if there is no active session.
}}
{{#if authSrv._isLoggedIn}}
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" style="margin-bottom: 0%" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="{{getenv 'logoUrl'}}" class="navbar-logo" alt="Logo" />
                {{#link-to "index" class="navbar-brand"}}
                    {{getlocale 'app_name'}}
                {{/link-to}}
            </div>
            <!-- /.navbar-header -->
            {{top-menu}}
            <!-- /.navbar-top-links -->
            {{side-menu}}
            <!-- /.navbar-static-side -->
        </nav>
      <!--style="height: 100%;min-height: 905px">-->
        <div id="page-wrapper" style="height: auto; min-height: 100vh">
            {{#each flashMessages.queue as |flash|}}
                {{#flash-message flash=flash as |component flash|}}
                    <p>{{flash.message}}</p>
                {{/flash-message}}
            {{/each}}

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                      <img class="rectangle" />
                      {{globalInfo.current_view_title}}
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                {{outlet}}
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
    </div>
{{else}}
    {{#each flashMessages.queue as |flash|}}
        {{#flash-message flash=flash as |component flash|}}
            <p>{{flash.message}}</p>
        {{/flash-message}}
    {{/each}}

    {{outlet}}

{{/if}}
