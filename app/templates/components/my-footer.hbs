<footer class="navbar-fixed-bottom">
  <div class="container">
    <p class="text-muted text-center">
      {{getenv 'appname'}} version: {{globalInfo.version}}
      --
      <a href="http://www.{{getenv 'siteUrl'}}">Leosac</a>
      --
      {{#if ws.isConnected}}
        <i class="fa fa-check" style="color: #5cb85c"></i> {{t 'connected'}}
      {{else}}
        <i class="fa fa-refresh fa-spin" style="color: #c02d29"></i> {{t 'disconnected'}}
      {{/if}}
    </p>
  </div>
</footer>
