<fieldset>
    <legend>{{t 'validity'}}</legend>
  {{#form.element label=(t 'enabled')}}
    {{input disabled=disabled type='checkbox' name=(t 'enabled') checked=enabled}}
  {{/form.element}}

  {{#form.element label=(t 'start_date')}}
    {{bs-datetimepicker disabled=disabled
                        date=startDate format='YYYY-MM-DD HH:mm'
                        updateDate=(action (mut startDate))
                        minDate=minDate
                        maxDate=maxDate}}
  {{/form.element}}

  {{#form.element label=(t 'end_date')}}
    {{bs-datetimepicker  disabled=disabled
                         date=endDate format='YYYY-MM-DD HH:mm'
                         updateDate=(action (mut model.date2))
                         minDate=minDate
                         maxDate=maxDate}}
  {{/form.element}}
</fieldset>
