<legend>{{t 'validity'}}</legend>
{{#form.element label=(t 'start_date')}}
  {{bs-datetimepicker disabled=this.disabled
                      date=this.startDate format='YYYY-MM-DD HH:mm'
                      updateDate=(action (mut this.startDate))
                      minDate=this.minDate
                      maxDate=this.maxDate}}
{{/form.element}}

{{#form.element label=(t 'end_date')}}
  {{bs-datetimepicker  disabled=this.disabled
                       date=this.endDate format='YYYY-MM-DD HH:mm'
                       updateDate=(action (mut this.endDate))
                       minDate=this.minDate
                       maxDate=this.maxDate}}
{{/form.element}}


{{form.element label=(t 'enabled') disabled=this.disabled
               controlType='checkbox' property=this.enabledProperty}}