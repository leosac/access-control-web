<fieldset>
    <legend>Validity</legend>
  {{#bs-form-element label='Enabled'}}
    {{input disabled=disabled type='checkbox' name='Enabled' checked=enabled}}
  {{/bs-form-element}}

  {{#bs-form-element label='Start Date'}}
    {{bs-datetimepicker disabled=disabled
                        date=startDate format='YYYY-MM-DD HH:mm'
                        updateDate=(action (mut startDate))
                        minDate=minDate
                        maxDate=maxDate}}
  {{/bs-form-element}}

  {{#bs-form-element label='End Date'}}
    {{bs-datetimepicker  disabled=disabled
                         date=endDate format='YYYY-MM-DD HH:mm'
                         updateDate=(action (mut endDate))
                         minDate=minDate
                         maxDate=maxDate}}
  {{/bs-form-element}}
</fieldset>
