{{#bs-form formLayout="horizontal" model=ap action=action}}
    <fieldset>
        <legend>Configuration</legend>
      {{bs-form-element controlType="text" label="Alias"
                        placeholder="MyAccessPoint"
                        property="alias"}}
      {{bs-form-element controlType="textarea" label="Notes"
                        placeholder="A few optional notes..."
                        property="description"}}

      {{#if isCreating}}
        {{#bs-form-element label="Controller Module"}}
          {{#power-select
            selected=ap.controllerModule
            options=availableAccessPointModules
            onchange=(action (mut ap.controllerModule))
            allowClear=true
          as |module|
          }}
            {{module}}
          {{/power-select}}
        {{/bs-form-element}}
      {{/if}}


      <!-- Include module specific stuff -->
      {{yield}}

      {{bs-button defaultText="Submit" type="primary" buttonType="submit"}}
    </fieldset>
{{/bs-form}}
