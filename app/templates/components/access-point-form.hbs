{{#bs-form formLayout="horizontal" model=ap action=action as | form|}}
    <fieldset>
        <legend>{{t 'configuration'}}</legend>
      {{form.element controlType="text" label=(t 'alias')
                        placeholder=(t 'access_point_placeholder')
                        property="alias"}}
      {{form.element controlType="textarea" label=(t 'notes')
                        placeholder=(t 'notes_placeholder')
                        property="description"}}

      {{#if isCreating}}
        {{#form.element label=(t 'controller_module')}}
          {{#power-select
            selected=ap.controllerModule
            options=availableAccessPointModules
            onchange=(action (mut ap.controllerModule))
            allowClear=true
          as |module|
          }}
            {{module}}
          {{/power-select}}
        {{/form.element}}
      {{/if}}


      <!-- Include module specific stuff -->
      {{yield}}

      {{bs-button defaultText=(t 'submit') type="primary" buttonType="submit"}}
    </fieldset>
{{/bs-form}}
