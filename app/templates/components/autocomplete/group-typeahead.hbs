<this.form.element @label={{this.label}}>
    <PowerSelect @searchEnabled={{true}} @search={{action "searchGroup"}} @selected={{this.selected}} @placeholder={{t "autocomplete.search_group"}} @onChange={{action "changed"}} as |accessPointInfo|>
        {{accessPointInfo.alias}}
    </PowerSelect>
    <a href="#" {{action 'clear'}}>{{t 'clear_selection'}}</a>
</this.form.element>
