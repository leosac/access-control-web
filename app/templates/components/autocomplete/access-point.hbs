{{#bs-form-element label=label}}
  {{#power-select-typeahead search=(action 'searchAP')
                            selected=selected
                            placeholder="Pick an access point (type % to list all)"
                            onchange=(action 'changed')
  as |accessPointInfo|}}
    {{accessPointInfo.alias}}
  {{/power-select-typeahead}}
  <a href="#" {{action 'clear'}}>{{t 'clear_selection'}}</a>
{{/bs-form-element}}
