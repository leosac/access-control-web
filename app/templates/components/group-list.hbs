<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <th>#Id</th>
        <th>Name</th>
        <th>Total members</th>
        </thead>
        <tbody>
        {{#each groups as |group|}}
            <tr>
                <td>{{group.id}}</td>
                <td>
                  {{#link-to 'group' group.id}}
                    {{group.name}}
                  {{/link-to}}
                </td>
                <td>{{group.memberCount}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
