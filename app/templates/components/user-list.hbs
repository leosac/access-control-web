<div class="table-responsive">
    <table class="table table-hover">
        <thead>
        <th>#Id</th>
        <th class="col-md-2">{{t 'firstname'}}</th>
        <th>{{t 'lastname'}}</th>
        <th>{{t 'email'}}</th>
        <th>{{t 'rank'}}</th>
        <th class="col-md-offset-10">{{t 'username'}}</th>
        </thead>
        <tbody>
        {{#each users as |user|}}
            {{#if user.id}}
                <LinkTo @route="profile" @query={{hash user_id=user.id}}>
                  <tr>
                    <td>{{user.id}}</td>
                    <td>{{user.firstname}}</td>
                    <td>{{user.lastname}}</td>
                    <td>{{user.email}}</td>
                    <td>{{t user.rank}}</td>
                    <td>{{user.username}}</td>
                  </tr>
                </LinkTo>
            {{/if}}
        {{/each}}
        </tbody>
    </table>
</div>
