<div>
  <BsForm @model=this @onSubmit={{action "setNameApp"}} as |form|>
    <div class="row">
      <div class="col-md-3 col-xs-10 col-sm-8">
        <form.element @label={{t "name_app"}} @placeholder={{t "name"}} @property="newName" as |el|>
          {{el.control}}
        </form.element>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 col-xs-10 col-sm-4">
        <BsButton @defaultText={{t "save"}} @type="primary" @buttonType="submit" @size='sm' />
      </div>
    </div>
  </BsForm>
</div>

<BsForm @formLayout='vertical' as |form|>
  <div class="row space-top">
    <div class="col-md-3 col-xs-10 col-sm-8">
      <form.element @label={{t "language"}}>
        <PowerSelect
          @selected={{this.language}}
          @options={{this.languageOption}}
          @searchEnabled=false
          @onChange={{action 'changeLanguage'}}
          @placeholder={{this.language}} as |lang|>
          {{lang}}
        </PowerSelect>
      </form.element>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 col-xs-8 col-sm-4">
      <BsButton @size='sm' @defaultText={{t 'switch'}} @type="primary" @onClick={{action 'setLocale' this.language}} />
    </div>
  </div>
</BsForm>

<div class="row space-top">
  <div class="col-md-6">
    {{t 'restart_info'}}:
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <ButtonWithConfirmation @size="sm" @text={{t "restart"}} @icon="glyphicon glyphicon-refresh" @type="warning" @onConfirm={{action "restart"}} />
  </div>
</div>
