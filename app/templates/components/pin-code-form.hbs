{{#bs-form formLayout="horizontal" model=pin action=action}}
    <fieldset>
        <legend>Configuration</legend>
      {{bs-form-element controlType="text" label="Alias"
                        placeholder="A friendly name to remember me by"
                        property="alias"}}
      {{bs-form-element controlType="number" label="Pin Code"
                        placeholder="1234" property="cardId"}}

      {{bs-form-element controlType="textarea" label="Notes"
                        placeholder="A few optional notes..."
                        property="description"}}

      {{user-picker selected=pin.owner onChange=(action (mut pin.owner))}}
      {{bs-button defaultText="Submit" type="primary" buttonType="submit"}}
    </fieldset>
{{/bs-form}}
