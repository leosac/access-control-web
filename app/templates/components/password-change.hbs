<BsForm @formLayout="vertical" @model=this as |form|>
    <fieldset>
        <legend>{{t 'password'}}</legend>
        <form.element @disabled={{this.disabled}} @controlType="password" @label={{t "password-change.current_pw"}} @placeholder={{t "password-change.current_pw"}} @property="current_password" />
        <form.element @disabled={{this.disabled}} @controlType="password" @label={{t "password-change.new_pw"}} @placeholder={{t "password-change.new_pw"}} @property="new_password" />
        <form.element @disabled={{this.disabled}} @controlType="password" @label={{t "confirmation"}} @placeholder={{t "password-change.new_pw"}} @property="new_password2" />

        <BsButton @disabled=disabled @defaultText={{t 'password-change.submit'}} @type="primary" @onClick={{action "changePassword"}} @buttonType="primary" />
    </fieldset>
</BsForm>
