{{#bs-form formLayout="horizontal"
           model=this
           action="changePassword"}}
    <fieldset>
        <legend>{{t 'password'}}</legend>
      {{bs-form-element disabled=disabled
                        controlType="password" label=(t 'password-change.current_pw')
                        placeholder="lamasticot" property="current_password"}}
      {{bs-form-element disabled=disabled
                        controlType="password" label=(t 'password-change.new_pw')
                        placeholder="New Password" property="new_password"}}
      {{bs-form-element disabled=disabled
                        controlType="password" label="Confirmation"
                        placeholder="New Password" property="new_password2"}}

      {{bs-button disabled=disabled
                  defaultText=(t 'password-change.submit') type="primary"
                  buttonType="submit"}}
    </fieldset>
{{/bs-form}}
