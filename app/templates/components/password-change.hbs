{{#bs-form formLayout="horizontal"
           model=this
           onSubmit=(action "changePassword") as |form|}}
    <fieldset>
        <legend>{{t 'password'}}</legend>
      {{form.element disabled=disabled
                        controlType="password" label=(t 'password-change.current_pw')
                        placeholder=(t 'password-change.current_pw') property="current_password"}}
      {{form.element disabled=disabled
                        controlType="password" label=(t 'password-change.new_pw')
                        placeholder=(t 'password-change.new_pw') property="new_password"}}
      {{form.element disabled=disabled
                        controlType="password" label=(t 'confirmation')
                        placeholder=(t 'password-change.new_pw') property="new_password2"}}

      {{bs-button disabled=disabled
                  defaultText=(t 'password-change.submit') type="primary"
                  buttonType="submit"}}
    </fieldset>
{{/bs-form}}
