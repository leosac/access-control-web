{{#bs-form formLayout='inline' action='scheduleMappingPicked' as |form|}}

  {{#form.element label=(t 'schedule.title')}}
    {{#power-select-typeahead search=(action 'searchSchedule')
                              selected=selectedSchedule.name
                              placeholder=(t 'schedule.type')
                              onchange=(action 'scheduleChanged') as |schedInfo|}}
      {{schedInfo.name}}
    {{/power-select-typeahead}}
  {{/form.element}}


{{#form.element label=(t 'mapping')}}
    {{#power-select selected=selectedMapping
                    searchField="alias"
                    options=selectedSchedule.mapping
                    onchange=(action (mut selectedMapping))
                    placeholder='...'
    as |mapping|
    }}
      {{mapping.alias}}
    {{/power-select}}
  {{/form.element}}

  {{bs-button size='sm' defaultText=(t 'schedule.join_mapping') type="primary" buttonType="submit"}}
{{/bs-form}}
