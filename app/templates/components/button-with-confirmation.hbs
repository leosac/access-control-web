{{#bs-button type=type icon=icon
             size=size
             action='spawnModal'}}
  {{text}}
{{/bs-button}}

{{#bs-modal body=false footer=false open=modalOpen title=(t 'confirmation')}}
  {{#bs-modal-body}}
    {{message}} <br>
  {{/bs-modal-body}}

  {{#bs-modal-footer}}
    {{#bs-button type='primary' action='onCancel'}}
        {{t 'cancel'}}
    {{/bs-button}}

    {{#bs-button type='danger' action='onConfirm'}}
        {{t 'confirm'}}
    {{/bs-button}}
  {{/bs-modal-footer}}
{{/bs-modal}}
