{{#bs-button type=type icon=icon
             size=size
             action='spawnModal'}}
  {{text}}
{{/bs-button}}

{{#bs-modal body=false footer=false open=modalOpen title=(t 'confirmation') as | modal|}}
  {{#modal.body}}
    {{message}} <br>
  {{/modal.body}}

  {{#modal.footer as | footer |}}
    {{#bs-button type='primary' action='onCancel'}}
        {{t 'cancel'}}
    {{/bs-button}}

    {{#bs-button type='danger' action='onConfirm'}}
        {{t 'confirm'}}
    {{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}
