{{#bs-form formLayout="horizontal" model=door action=action as |form|}}
    <fieldset>
        <legend>{{t 'configuration'}}</legend>
      {{form.element controlType="text" label=(t 'alias')
                        placeholder=(t 'door.placeholder')
                        property="alias"}}
      {{form.element controlType="textarea" label=(t 'notes')
                        placeholder=(t 'notes_placeholder')
                        property="description"}}

      {{autocomplete/access-point label=(t 'access_point')
                                  onChange=(action 'changeAP')
                                  selected=door.accessPoint.alias}}

      {{bs-button defaultText=(t 'submit') type="primary" buttonType="submit"}}
    </fieldset>
{{/bs-form}}
