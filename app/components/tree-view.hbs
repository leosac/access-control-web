<div class="row">
    <div class="col-md-6">
        <EmberJstree @actionReceiver={{this.jsTreeActionReceiver}} @eventDidMoveNode="handleJstreeEventDidMoveNode" @eventDidSelectNode="handleJstreeEventDidSelectNode" @data={{this.zoneDataTree}} @plugins={{this.plugins}} @typesOptions={{this.typesOptions}} @checkCallback={{this.checkCallback}} />
    </div>

    {{#if this.selectedZone}}
      <div class="col-md-6">
        <div class="row">
          <div class="col-sm-8">
            <PowerSelect @searchEnabled={{true}} @search={{this.searchDoor}} @selected={{this.newDoor.alias}} @placeholder={{t "schedule.type_door"}} @onchange={{fn (mut this.newDoor)}} as |doorInfo|>
              {{doorInfo.alias}}
            </PowerSelect>
          </div>
          <div class="col-sm-4">
            <BsButton @size='sm' @type="primary" @onClick={{this.addDoor}} @defaultText={{t 'schedule.add_door'}} />
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="table-responsive">
              <table class="table table-hover table-bordered">
                <thead>
                <th>#Id</th>
                <th>{{t 'alias'}}</th>
                <th>{{t 'zone.remove_from_zone'}}</th>
                </thead>
                <tbody>
                {{#each this.selectedZone.doors as |door|}}
                  <LinkTo @route='door' @model={{door.id}}>
                    <tr>
                      <td>{{door.id}}</td>
                      <td>{{door.alias}}</td>
                      <td>
                        <div class="pull-right">
                          <BsButton @size='xs' @icon='glyphicon glyphicon-remove' @type='danger'
                                    @defaultText={{t 'remove'}} @onClick={{fn this.removeDoor door}} />
                        </div>
                      </td>
                    </tr>
                  </LinkTo>
                {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
        {{#if this.arrayDoor}}
          <p class="summary-zone-tree">
            {{t 'summary'}}:
          </p>
          <div class="row">
            <div class="col-md-12">
              <div class="table-responsive">
                <table class="table table-hover table-bordered">
                  <thead>
                  <th>{{t 'zone.title'}}</th>
                  <th>{{t 'door.title'}}</th>
                  </thead>
                  <tbody>
                  {{#each this.arrayDoor as |entry|}}
                    <LinkTo @route='door' @model={{entry.doorId}}>
                      <tr>
                        <td>{{entry.zone}}</td>
                        <td>{{entry.door}}</td>
                      </tr>
                    </LinkTo>
                  {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        {{/if}}
      </div>
    {{/if}}
</div>
