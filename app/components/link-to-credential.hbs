{{#if this.args.credential.isRFIDCard}}
    <LinkTo @route='credentials.rfid-card' @model={{this.args.credential.id}}>
      <tr>
        {{this.args.text}}
      </tr>
    </LinkTo>
{{/if}}
{{#if this.args.credential.isPinCode}}
    <LinkTo @route='credentials.pin-code' @model={{this.args.credential.id}}>
      <tr>
        {{this.args.text}}
      </tr>
    </LinkTo>
{{/if}}
