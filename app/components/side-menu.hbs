  <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar" data-parent="#wrapper">
    {{!-- Sidebar - Brand --}}
    <LinkTo class="sidebar-brand d-flex align-items-center justify-content-center" @route="index">
      <img src="{{getenv 'logoUrl'}}" class="sidebar-brand-icon" alt="leosac project"/>
      <div class="sidebar-brand-text mx-3">{{getlocale 'app_name'}}</div>
    </LinkTo>

    <hr class="sidebar-divider my-0">

    <li class="nav-item">
      <LinkTo class="nav-link" @route='index'>
