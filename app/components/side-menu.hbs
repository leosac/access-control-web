      <div id="collapseOverview" class="collapse" aria-labelledby="{{t 'modules'}}" data-parent="#accordionSidebar">
        <div class="bg-white py-2 collapse-inner rounded">
          <h6 class="collapse-header">{{t 'w.overview'}}:</h6>
          <LinkTo class="collapse-item" @route='system-overview'>{{t 'system-overview.title'}}</LinkTo>
          <LinkTo class="collapse-item" @route='access-overview'>{{t 'access-overview.title'}}</LinkTo>
          <LinkTo class="collapse-item" @route='zone-overview'>{{t 'tree-view.title'}}</LinkTo>
        </div>
      </div>
    </li>

    <hr class="sidebar-divider">

    <div class="sidebar-heading">
      {{t 'access'}}
