<BsForm @formLayout="vertical" @model="this" as |form|>
    <fieldset>
        <legend>{{t 'password'}}</legend>
        <form.element @disabled={{this.args.disabled}} @controlType="password" @label={{t "password-change.current_pw"}} @placeholder={{t "password-change.current_pw"}} @property="current_password" />
        <form.element @disabled={{this.args.disabled}} @controlType="password" @label={{t "password-change.new_pw"}} @placeholder={{t "password-change.new_pw"}} @property="new_password" />
        <form.element @disabled={{this.args.disabled}} @controlType="password" @label={{t "confirmation"}} @placeholder={{t "password-change.new_pw"}} @property="new_password2" />

        <form.submitButton @disabled="disabled" @onClick={{this.changePassword}}>{{t 'password-change.submit'}}</form.submitButton>
    </fieldset>
</BsForm>
