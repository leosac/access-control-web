<div class="table-responsive">
    <table class="table table-hover">
        <thead>
        <th>#Id</th>
        <th class="col-md-2">{{t 'name'}}</th>
        <th>{{t 'users.members'}}</th>
        {{#if this.args.deleteLink}}
            <th class="col-md-offset-10 col-md-2">{{t 'delete'}}</th>
        {{/if}}
        </thead>
        <tbody>
        {{#each this.args.groups as |group|}}
              <tr>
                <td role="button" {{on 'click' (fn this.gotoItem group.id)}}>{{group.id}}</td>
                <td role="button" {{on 'click' (fn this.gotoItem group.id)}}>{{group.name}}</td>
                <td>{{group.memberCount}}</td>
                {{#if this.args.deleteLink}}
                    <td>
                        <ButtonWithConfirmation @type="danger" @icon="glyphicon glyphicon-remove" @size="xs" @text={{t "delete"}} @message={{t "users.delete_group_confirm"}} @onConfirm={{fn this.deleteGroup group.id}} />
                    </td>
                {{/if}}
              </tr>
        {{/each}}
        </tbody>
    </table>
</div>
