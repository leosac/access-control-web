<div class="row text-white">
    {{!--suppress ALL --}}
    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form-signin p-4">
        <h1 class="display-4 py-2 text-truncate">
            <img src="{{getenv 'projectLogoUrl'}}" class="navbar-logo" alt="leosac project" />
        </h1>
        <div class="px-2">
            <BsForm @formLayout="horizontal" @class="justify-content-center" @onSubmit={{this.login}} as |form|>
                <h2 class="mb-4">{{t 'login-form.welcome'}}</h2>
                <form.element @controlType="text" @id="username-input" @label={{t "form.username.label"}} @value={{this.inputUsername}} @required={{true}} @onChange={{fn (mut this.inputUsername)}} @placeholder={{t "form.username.ph"}} />
                <form.element @controlType="password" @id="password-input" @label={{t "form.password.label"}} @value={{this.inputPassword}} @required={{true}} @onChange={{fn (mut this.inputPassword)}} @placeholder={{t "form.password.ph"}} />

                <form.submitButton>{{t 'login-form.submit'}}</form.submitButton>

                <br />
                {{#if this.pending}}
                    {{!--suppress XmlDefaultAttributeValue --}}
                    <FaIcon @icon="refresh" @spin={{true}} class="login-spinner-style" aria-hidden="true" />
                {{/if}}

                {{#if this.errorMessage}}
                    <div class="alert alert-danger">
                        {{this.errorMessage}}
                    </div>
                {{/if}}
            </BsForm>
        </div>
    </div>
</div>