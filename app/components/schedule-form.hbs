<BsForm @formLayout="vertical" @model={{this.args.schedule}} as |form|>
  <div class="col-md-6">
    <fieldset>
      <legend>{{t 'configuration'}}</legend>
      <form.element @controlType="text" @label={{t "name"}} @placeholder={{t "schedule.placeholder"}} @property="name" />

      <form.element @controlType="textarea" @label={{t "notes"}} @placeholder={{t "notes_placeholder"}} @property="description" />
    </fieldset>
    <fieldset>
      <legend>{{t 'timeframes'}}</legend>
      <div class="row">
        <div class="col-md-6 space-bottom">
          <BsButton @defaultText={{t 'add_time_zone'}} @type='primary' @onClick={{this.addTimeframe}} />
        </div>
      </div>
      {{#each this.schedule.timeframes as |tf|}}
        <div class="panel panel-warning">
          <div class="panel-heading panel-timeframe">{{t 'timeframe'}}
          </div>
          <div class="panel-body">
            <ScheduleTimeframe @form={{form}} @
            ={{fn this.removeTimeframe tf}} @timeframe={{tf}} />
          </div>
        </div>
      {{/each}}
      <div class="row space-top space-bottom">
        <div class="col-md-6">
          <form.submitButton @type="success" @onClick={{this.args.action}}>{{t 'submit'}}</form.submitButton>
        </div>
          {{#if this.args.delete}}
            <div class="pull-right form-button-delete">
              <ButtonWithConfirmation @type="danger" @icon="glyphicon glyphicon-remove" @size="md" @text={{t "delete"}} @message={{t "schedule.delete_confirm"}} @onConfirm={{this.args.delete}} />
            </div>
          {{/if}}
      </div>
    </fieldset>
  </div>
</BsForm>